<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/form_outline" >

    <LinearLayout
        android:id="@+id/llh_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:foregroundGravity="right"
        android:gravity="clip_horizontal"
        android:orientation="horizontal"
        android:weightSum="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_cancel_store"
            android:layout_width="43dp"
            android:layout_height="22dp"
            android:layout_gravity="clip_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="20"
            android:background="#00ff0000"
            android:text="취소"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_form_title"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="19dp"
            android:layout_weight="60"
            android:fontFamily="@font/line_seed_kr_bd"
            android:gravity="center_horizontal"
            android:text="대화 저장"
            android:textColor="@color/black"
            android:textSize="27sp" />

        <Button
            android:id="@+id/btn_store"
            android:layout_width="43dp"
            android:layout_height="22dp"
            android:layout_gravity="clip_horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="20"
            android:background="#00ff0000"
            android:gravity="center_vertical|end"
            android:text="저장"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:layout_marginVertical="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llh_store">

        <TextView
            android:id="@+id/tv_record_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대화를 정말로 끝내시겠습니까?" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
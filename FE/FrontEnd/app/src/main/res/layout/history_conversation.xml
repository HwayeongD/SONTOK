<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llh_HistoryConversationText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:alpha="0.8" >

    <Space
        android:id="@+id/space_left"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_HistoryConversationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounded_conversation_item"
        android:fontFamily="@font/line_seed_kr_bd"
        android:padding="15dp"
        android:text="메시지 텍스트"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <Space
        android:id="@+id/space_right"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>
